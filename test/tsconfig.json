{
	"compilerOptions": {
		/* Language & Environment */
		"target": "ES2016",
		"module": "CommonJS",
		"lib": [ "ES2016" ],

		/* Interop & Compatibility */
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true,

		/* Emit & Declarations */
		"declaration": true,
		"sourceMap": true,

		/* Type Checking & Linting */
		"strict": true,

		/* Miscellaneous */
		"forceConsistentCasingInFileNames": true,
	},
	"include": [ "./*.ts" ]
}
